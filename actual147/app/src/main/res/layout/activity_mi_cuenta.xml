<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingLeft="0dp"
    android:orientation="vertical"
	android:id="@+id/layoutMiCuenta"
    android:layout_gravity="center_horizontal"
    tools:context="com.grupothal.safepath.MiCuenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
		android:id="@+id/layoutMiCuentaInterna">
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardCornerRadius="75dp">

            <ImageView
                android:id="@+id/imgProfileLarge"
                android:layout_gravity="center_horizontal"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/user"/>

        </android.support.v7.widget.CardView>

        <EditText
            android:layout_width="300dp"
            android:paddingTop="30dp"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/nicknameView"
            android:text="Your nickName"/>
        <EditText
            android:layout_width="300dp"
            android:paddingTop="20dp"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/lastNameView"
            android:text="Your lastName"/>
        <EditText
            android:layout_width="300dp"
            android:paddingTop="20dp"
            android:focusable="false"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/emailView"
            android:text="Your Email"/>
    </LinearLayout>
</LinearLayout>
